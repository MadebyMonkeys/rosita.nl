<div class="audio-player">
    <div class="audio-player__image">
        <svg xmlns="http://www.w3.org/2000/svg" class="audio-icon" viewBox="0 0 20 20" fill="currentColor">
            <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895
            3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
        </svg>
    </div>
    <div class="audio-player__controls">
        <audio id="myAudio" src={{site.audioSrc}}></audio>
        <div class="controls">
            <button class="player-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="var(--player-button-color)">
                    <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"
                        clip-rule="evenodd"/>
                </svg>
            </button>
            <input type="range" class="timeline" max="100" value="0"/>
            <div class="volume-control">
                <div class="speaker">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="3.5em" height="auto" fill="none">
                        <path
                            d="M13 3.7446C13 3.27314 12.8728 2.50021 12.1657 2.14424C11.4151 1.76635 10.7163 2.19354 10.3623 2.51158L4.94661
                                7.43717H3C1.89543 7.43717 1 8.3326 1 9.43717L1.00001 14.6248C1.00001 15.7293 1.89544 16.6248 3.00001
                                16.6248H4.95001L10.3623 21.4891C10.7175 21.8081 11.416 22.2331 12.1656 21.8554C12.8717 21.4998 13 20.7286 13
                                20.2561V3.7446Z"
                            fill="var(--player-button-color)"/>
                    </svg>
                </div>
                <div class="bars">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <input class="volume-input" type="range" min="0" max="100" step="20" value="0"/>
                </div>
            </div>
        </div>
    </div>
</div>